nextflow_process {

    name "Test Process SRA_ASPERACLI"
    script "../main.nf"
    process "SRA_ASPERACLI"

    tag "modules"
    tag "modules_nfcore"
    tag "sra"
    tag "sra/asperacli"

    test("paired end + SRR24085752") {
        when {
            process {
                """
                input[0] = [
                    [ id:'SRR24085752' ], // meta map
                    'SRR24085752'
                ]
                """
            }
        }
        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'SRR24085752' ], // meta map
                    'SRR24085752'
                ]
                """
            }
        }
        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}