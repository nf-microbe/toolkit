nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"

    test("Test with minimal disk usage") {
        config "../conf/test.config"
        when {
            params {
                outdir                      = "$outputDir"
                remove_intermediate_files   = false
            }
        }
        then {
            assertAll(
                { assert workflow.success },
                { assert workflow.trace.succeeded().size() == 143 },
            )
        }
    }

    test("Test nothing") {
        config "../conf/test_nothing.config"
        when {
            params {
                outdir = "$outputDir"
            }
        }
        then {
            assertAll(
                { assert workflow.success },
                { assert workflow.trace.succeeded().size() == 5 },
            )
        }
    }
}
